<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="400"
        Width="350" Height="400"
        xmlns:vm="using:Kotor.DevelopmentKit.Base.ViewModels"
        xmlns:controls="using:Kotor.DevelopmentKit.Base.Controls"
        x:DataType="vm:LoadFromERFWindowViewModel"
        x:Class="Kotor.DevelopmentKit.Base.Windows.LoadFromERFWindow"
        Title="LoadFromERFWindow">
    <Grid RowDefinitions="Auto, *, 25, 35" Margin="10">

        <ProgressBar
            Grid.Row="0"
            Margin="0 0 0 10"
            IsVisible="{Binding ResourceList.Loading}"
            IsIndeterminate="True"
        />

        <controls:ERFResourceList
            Grid.Row="1"
            Margin="0 0 0 10"
            DataContext="{Binding ResourceList}"
        />

        <TextBox
            Grid.Row="2"
            Margin="0 0 0 10"
            Text="{Binding ResourceList.ResRefFilter, Mode=TwoWay}"
            Height="20"
        />
        
        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            Spacing="10"
        >
            <Button Click="Cancel_Click">Cancel</Button>
            <Button Click="Load_Click" IsEnabled="{Binding !ResourceList.Loading}">Load</Button>
        </StackPanel>
        
    </Grid>
</Window>
