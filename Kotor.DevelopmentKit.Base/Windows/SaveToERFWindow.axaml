<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="400"
        Width="350" Height="400"
        xmlns:vm="using:Kotor.DevelopmentKit.Base.ViewModels"
        xmlns:controls="using:Kotor.DevelopmentKit.Base.Controls"
        x:DataType="vm:SaveToERFWindowViewModel"
        x:Class="Kotor.DevelopmentKit.Base.Windows.SaveToERFWindow"
        Title="SaveToERFWindow">
    <Grid RowDefinitions="*, 10, 25, 10, 35" Margin="10">

        <controls:ERFResourceList DataContext="{Binding ResourceList}" />

        <Grid Grid.Row="2" ColumnDefinitions="*, 100" >
            <TextBox Grid.Column="0" Text="{Binding ResRef, Mode=TwoWay}" Margin="0 0 10 0" />
            <ComboBox Grid.Column="1" ItemsSource="{Binding ResourceTypeOptions}" SelectedItem="{Binding ResourceType}" HorizontalAlignment="Stretch" Margin="0 0 0 6" />
        </Grid>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="10">
            <Button Click="Cancel_Click">Cancel</Button>
            <Button Click="Save_Click">Save</Button>
        </StackPanel>

    </Grid>
</Window>
