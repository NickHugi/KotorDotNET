<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Kotor.DevelopmentKit.Editor2DA.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        x:DataType="vm:EditColumnDialogViewModel"
        x:Class="Kotor.DevelopmentKit.Editor2DA.Windows.EditColumnDialog"
        x:Name="Window"
        SizeToContent="Height" Width="350"
        Title="EditColumnDialog">
    <StackPanel Margin="10">
        <TextBlock Foreground="Gray">Column Header</TextBlock>
        <StackPanel Orientation="Vertical" Margin="0 0 0 10">
            <TextBox Text="{Binding ColumnHeader}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button IsEnabled="{Binding ValidationContext.IsValid}" Command="{Binding #Window.Submit}">Add Column</Button>
            <Button Command="{Binding #Window.Cancel}">Cancel</Button>
        </StackPanel>
    </StackPanel>
    
</Window>
